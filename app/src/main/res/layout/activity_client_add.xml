<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Cliente"
        android:layout_margin="@dimen/normal_margin_x3"
        android:textStyle="bold"
        android:textSize="@dimen/h3"/>

    <EditText
        android:id="@+id/clientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:layout_marginBottom="@dimen/normal_margin_x2"
        android:hint="Nombre de cliente"/>

    <EditText
        android:id="@+id/clientPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:layout_marginBottom="@dimen/normal_margin_x2"
        android:hint="Télefono"/>

    <EditText
        android:id="@+id/clientAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:hint="Dirección"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/saveClientButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/normal_margin_x4"
            android:layout_marginRight="@dimen/normal_margin_x4"
            android:layout_marginBottom="@dimen/normal_margin_x2"
            android:text="Guardar"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorAccent"
            android:textSize="@dimen/h5"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:foregroundGravity="bottom"/>
    </LinearLayout>

</LinearLayout>