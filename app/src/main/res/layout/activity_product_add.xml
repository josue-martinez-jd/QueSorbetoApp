<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginStart="320dp"
        android:src="@drawable/edit"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Producto"
        android:layout_margin="@dimen/normal_margin_x3"
        android:textStyle="bold"
        android:textSize="@dimen/h3"/>

    <EditText
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:layout_marginBottom="@dimen/normal_margin_x2"
        android:hint="Nombre de producto"/>

    <EditText
        android:id="@+id/productCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:layout_marginBottom="@dimen/normal_margin_x2"
        android:hint="CÃ³digo"/>

    <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin_x4"
        android:layout_marginRight="@dimen/normal_margin_x4"
        android:hint="Precio de venta"
        android:inputType="numberDecimal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/saveProductButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/normal_margin_x4"
            android:layout_marginRight="@dimen/normal_margin_x4"
            android:layout_marginBottom="@dimen/normal_margin_x2"
            android:text="Guardar"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorAccent"
            android:textSize="@dimen/h5"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:foregroundGravity="bottom"/>
    </LinearLayout>

</LinearLayout>